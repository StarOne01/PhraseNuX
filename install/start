#!/bin/bash
clear
echo -ne "\e[38;5;9mNote: For security reasons the source codes will be cleared, if you need to play with source codes please download this again and edit the installation script\n\e[0m"
rm -rf PhraseX.cpp
rm -rf install_dependencies.cpp
sudo apt install secure-delete
sudo apt install wget
g++ -o PhraseNUX ../random/csprng.cpp ../hash/sha3.cpp PhraseNUX.cpp -I.
sudo apt install make
wget https://www.aescrypt.com/download/v3/linux/aescrypt-3.14.tgz
tar -xzf aescrypt-3.14.tgz
cd aescrypt-3.14/src && make && mv aescrypt /bin
cd .. && cd ..
rm -rf aescrypt-3.14
rm -rf aescrypt-3.14.tgz
rm -rf PhraseNUX.cpp
rm -rf Start
rm -rf install_dependencies.cpp
cd ..
rm -rf random
rm -rf hash
cd  install 
mv PhraseNUX ..
cd ..
rm -rf install
touch test
echo -ne "\e[38;5;9mWarning !! : Keep this password very strong and please remember this, IF YOU FORGOT THIS PASSWORD, YOU CAN'T RECOVER ANY OF YOUR PASSWORDS\e[0m\n"
echo -ne "\e[38;5;9m Guide for Password creation\n\e[0m\n"
echo -ne "\e[38;5;9m*PLEASE DONOT INCLUDE ANY SPACES IN  YOUR PASSWORD AND DONOT INCLUDE ANY SYMBOLS, IF YOU INCLUDE THEN YOU WILL FACE SOMETROUBLE\e[0m\n"
echo -ne "\e[38;5;9mâ€¢You can use any ASCII |except  symbols| amd DONOT include Personal informarion amd short passwords for PROHIBITED\e[0m\n"
aescrypt -e test
srm -z test

echo -ne "\e[38;5;9m\n\nTo Start using the password manager Please enter ./PhraseNUX in this directory\e[0m\n"
